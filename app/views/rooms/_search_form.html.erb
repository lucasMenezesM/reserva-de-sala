<div class="text-center mb-5">
  <h2 class="display-5 fw-bold text-body-emphasis">Available Rooms</h2>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Search different available rooms and make your reservation!</p>
  </div>
</div>

<div class="card card-header mb-5">

  <%= search_form_for q, url: search_rooms_path, remote: true do |f| %>

    <div class="row mb-3">
      <div class="form-group col-md-4">
        <%= f.label :name %>
        <%= f.search_field :name_cont, class: 'form-control' %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :Building %>
        <%= f.search_field :building_name_cont, class: 'form-control' %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :Floor %>
        <%= f.search_field :floor_name_cont, class: 'form-control' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="form-group col-md-4">
        <%= f.label :date, "Available Date" %>
        <%= f.text_field :date, value: params.dig(:q, :date), placeholder: "YYYY-MM-DD", class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :time, "Available Date" %>
        <%= f.text_field :time, value: params.dig(:q, :time), placeholder: "HH:MM:SS", class: "form-control" %>
      </div>
    </div>

    <div class="form-group mt-4">
      <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
        <i class="fa-solid fa-magnifying-glass"></i> Search
      <% end %>

      <%= link_to rooms_path, class: 'btn btn-secondary' do %>
        <i class="fa-solid fa-trash"></i> Clear
      <% end %>
    </div>

  <% end %>
</div>