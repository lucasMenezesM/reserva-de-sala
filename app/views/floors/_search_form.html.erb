<div class="text-center mb-5">
  <h2 class="display-5 fw-bold text-body-emphasis">Available Floors</h2>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Search different available floors and associate to registered rooms!</p>
  </div>
</div>

<div class="search-form card card-header mb-5">

  <%= search_form_for q, url: search_floors_path, remote: true do |f| %>

    <div class="row mb-3">
      <div class="form-group col-md-7">
        <%= f.label :name %>
        <%= f.search_field :name_cont, class: 'form-control' %>
      </div>

    </div>
      <div class="form-group col-md-5">
        <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
          <i class="fa-solid fa-magnifying-glass"></i> Search
        <% end %>
    
        <%= link_to floors_path, class: 'btn btn-secondary' do %>
          <i class="fa-solid fa-trash"></i> Clear
        <% end %>
      </div>

  <% end %>
</div>